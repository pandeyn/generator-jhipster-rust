# Central configuration for all microservices
# This file is loaded into Consul KV store by consul-config-loader

configserver:
  name: Docker Consul Config Server
  status: Connected to Consul Server running in Docker

# Shared configuration across all services
<%_ if (authenticationTypeJwt) { _%>
jwt:
  # IMPORTANT: Change this secret in production!
  # This secret should be shared across all microservices for JWT validation
  secret: <%= jwtSecretKey %>
  expiration_hours: 24
<%_ } _%>

# Common database settings (override per-service as needed)
database:
  pool_size: 10
  timeout_seconds: 30

# Logging configuration
logging:
  level: info
  format: json

# Health check configuration
health:
  interval_seconds: 10
  timeout_seconds: 5
